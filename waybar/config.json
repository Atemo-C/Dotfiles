{
	// General bar settings
	"layer": "top",
	"position": "top",
	"spacing": "8",
	"modifier-reset": "press",
	"exclusive": true,
	"fixed-center": true,
	"passthrough": false,
	"gtk-layer-shell": true,

	// Left modules
	"modules-left": [
		"image#Program_launcher", "custom/Spacer",
		"image#Power_menu",       "custom/Spacer",
		"hyprland/workspaces",
	],

	// Center modules
	"modules-center": [
		"tray",             "custom/Spacer",
		"image#Screenshot", "custom/Spacer",
		"image#Clipboard",  "custom/Spacer",
		"image#Files",      "custom/Spacer", "custom/Spacer",
		"clock",            "custom/Spacer", "custom/Spacer",
		"image#CPU",        "cpu",           "temperature",   "custom/Spacer",
		"image#RAM",        "memory",        "custom/Spacer",
		"image#Volume",     "wireplumber",   "custom/Spacer",
		"battery",          "custom/Spacer",
	],

	// Right modules
	"modules-right": [
		"image#Reload",  "custom/Spacer",
		"image#Exit",   "custom/Spacer",
		"image#Close",
	],

	// Spacer
	"custom/Spacer": {
		"format": "  ",
		"tooltip": false,
		"interval": "once",
	},

	// Program launcher
	"image#Program_launcher": {
		"path": ".config/waybar/Icons/Program launcher.png",
		"size": 22,
		"on-click": "bash $HOME/Programs/Scripts/Desktop\\ scripts/Program\\ launcher.sh",
		"on-click-right": "tofi-drun --drun-launch=true",
	},

	// Power menu
	"image#Power_menu": {
		"path": ".config/waybar/Icons/Power menu.png",
		"size": 22,
		"on-click": "bash $HOME/Programs/Scripts/Desktop\\ scripts/Power\\ menu.sh",
	},

	// Hyprland workspaces
	"hyprland/workspaces": {
		"persistent-workspaces": {
			"*": 8,
		},
	},

	// System tray
	"tray": {
		"icon-size": 22,
		"spacing": 8,
		"reverse-direction": false,
	},

	// Screenshot
	"image#Screenshot": {
		"path": ".config/waybar/Icons/Screenshot.png",
		"size": 22,
		"on-click": "bash $HOME/Programs/Scripts/Desktop\\ scripts/Hyprshot.sh",
		"on-click-right": "bash $HOME/Programs/Scripts/Desktop\\ scripts/Hyprshot\\ single.sh",
		"on-scroll-up": "hyprctl keyword decoration:screen_shader $HOME/.config/hypr/shaders/crt.frag",
		"on-scroll-down": "hyprctl keyword decoration:screen_shader ''",
	},

	// Clipboard
	"image#Clipboard": {
		"path": ".config/waybar/Icons/Clipboard.png",
		"size": 22,
		"on-click": "clipman pick -t CUSTOM -T tofi",
		"on-click-right":  "st -e micro $HOME/Documents/Clipboard.txt",
		"on-click-middle": "clipman clear --all & notify-send -t 1000 'Clipboard cleared'",
	},

	// Files
	"image#Files": {
		"path": ".config/waybar/Icons/Files.png",
		"size": 22,
		"on-click": "thunar",
	},

	// Clock
	"clock": {
		"format": "{:%d/%m/%Y %H:%M}",
		"on-click": "st -e calcurse",
	},

	// CPU
	"image#CPU": {
		"path": ".config/waybar/Icons/CPU.png",
		"size": 22,
		"on-click": "st -e btop",
		"on-click-right": "missioncenter",
	},
	"cpu": {
		"interval": 2,
		"format": "{usage}% ",
		"on-click": "st -e btop",
		"on-click-right": "missioncenter",
	},
	"temperature": {
		"critical-threshold": 75,
		"interval": 2,
		"hwmon-path": "/sys/class/hwmon/hwmon1/temp1_input",
		"format": "{temperatureC}°C",
		"format-critical": "[!!!] {temperatureC}°C",
		"on-click": "st -e btop",
		"on-click-right": "missioncenter",
	},

	// RAM
	"image#RAM": {
		"path": ".config/waybar/Icons/RAM.png",
		"size": 22,
		"on-click": "st -e btop",
		"on-click-right": "missioncenter",
	},
	"memory": {
		"interval": "1",
		"format": "{percentage}%",
		"on-click": "st -e btop",
		"on-click-right": "missioncenter",
	},

	// Output volume
	"image#Volume": {
		"path": ".config/waybar/Icons/Output volume.png",
		"size": 22,
		"on-click": "pavucontrol",
		"on-click-right": "qpwgraph",
		"on-click-middle": "amixer -q sset Master toggle",
	},
	"wireplumber": {
		"format": "{volume}%",
		"format-muted": "Muted",
		"on-click": "pavucontrol",
		"on-click-right": "qpwgraph",
		"on-click-middle": "amixer -q sset Master toggle",
	},

	// Battery (will not show if no batteries are detected)
	"battery": {
		"format": "{capacity}% {icon}",
		"format-icons": [" ", " ", " ", " ", " "],
	},

	// Reload Hyprland
	"image#Reload": {
		"path": ".config/waybar/Icons/Reload.png",
		"size": 22,
		"on-click": "hyprctl reload",
	},

	// Leave Hyprland (only on right-click to avoid missclicks)
	"image#Exit": {
		"path": ".config/waybar/Icons/Exit.png",
		"size": 22,
		"on-click-right": "hyprctl dispatch exit",
	},

	// Close focused window
	"image#Close": {
		"path": ".config/waybar/Icons/Close.png",
		"size": 22,
		"on-click": "hyprctl dispatch killactive",
		"on-click-right": "hyprctl kill",
	},
}
